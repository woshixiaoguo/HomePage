.content.content-intro
	.content-inner
		if intro.background
			canvas#background
		.wrap.fade
			if intro.supportAuthor
				a(href="https://github.com/woshixiaoguo/" class="github-corner" aria-label="View source on GitHub" target="_blank" rel="noopener noreferrer")
					svg(width="80" height="80" viewBox="0 0 250 250" style=`fill:${intro.background? 'transparent': '#222325'}; color:#fff; position: absolute; top: 0; border: 0; right: 0;` aria-hidden="true")
