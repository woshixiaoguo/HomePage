.content.content-intro
	.content-inner
		if intro.background
			canvas#background
		.wrap.fade
			h2.content-title #{intro.title}
			h3.content-subtitle(original-content=`${intro.subtitle}`) &nbsp;
			- const { first , second , third, fourth } = intro.ul
			- const target = intro.target
			div.card
				.card-inner
					ul
						li
							a(href=`${first.href}` aria-label=`${first.text}` target=`${target}`)
								i(class=`icon icon-${first.icon}`)
								span(data-translate=`${first.text}`) #{first.text}

						li
							a(href=`${second.href}` aria-label=`${second.text}` target=`${target}`)
								i(class=`icon icon-${second.icon}`)
								span(data-translate=`${second.text}`) #{second.text}

						li
							a(href=`${third.href}` aria-label=`${third.text}` target=`${target}`)
								i(class=`icon icon-${third.icon}`)
								span(data-translate=`${third.text}`) #{third.text}

						li
							a(href=`${fourth.href}` aria-label=`${fourth.text}` target=`${target}`)
								i(class=`icon icon-${fourth.icon}`)
								span(data-translate=`${fourth.text}`) #{fourth.text}
