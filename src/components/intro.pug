				style.
					.github-corner:hover .octo-arm{animation:octocat-wave 560ms ease-in-out}@keyframes octocat-wave{0%,100%{transform:rotate(0)}20%,60%{transform:rotate(-25deg)}40%,80%{transform:rotate(10deg)}}@media (max-width:500px){.github-corner:hover .octo-arm{animation:none}.github-corner .octo-arm{animation:octocat-wave 560ms ease-in-out}}</style>

			h2.content-title #{intro.title}
			h3.content-subtitle(original-content=`${intro.subtitle}`) &nbsp;
			- const { first , second , third, fourth } = intro.ul
			- const target = intro.target
			div.card
				.card-inner
					ul
						li
							a(href=`${first.href}` aria-label=`${first.text}` target=`${target}`)
								i(class=`icon icon-${first.icon}`)
								span(data-translate=`${first.text}`) #{first.text}

						li
							a(href=`${second.href}` aria-label=`${second.text}` target=`${target}`)
								i(class=`icon icon-${second.icon}`)
								span(data-translate=`${second.text}`) #{second.text}

						li
							a(href=`${third.href}` aria-label=`${third.text}` target=`${target}`)
								i(class=`icon icon-${third.icon}`)
								span(data-translate=`${third.text}`) #{third.text}

						li
							a(href=`${fourth.href}` aria-label=`${fourth.text}` target=`${target}`)
								i(class=`icon icon-${fourth.icon}`)
								span(data-translate=`${fourth.text}`) #{fourth.text}

			if intro.youtube_channel.switch
				- const { link, name } = intro.youtube_channel.info
				.youtube-channel-link
					a(href=`${link}` target="_blank" rel="noopener noreferrer")
						.youtube-icon
							svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
								path(d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="#FF0000")
								path(d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="#b6b6b6")
						.channel-name #{name}